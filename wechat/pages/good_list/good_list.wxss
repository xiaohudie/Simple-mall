.good_list_section{
  padding:0 5vw;
}

.recommend_menu{
  padding:0 10vw;
  display: flex;
  align-content: center;
}

.recommend_goods_img{
  width: 30vw;
  height:30vw;
}

.recommend_goods_info{
  display: inline-block;
  width:40vw;
  height:30vw;
  margin-left: 5vw;
}

.recommend_goods_info .goods_name{
  width: 40vw;
  font-size:12px;
  line-height: 20px;
  height: 40px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: block;
  margin-top: 5vw;
  margin-bottom: 3vw;
}

.recommend_goods_info .goods_price{
  color:#ff0068;
  font-family: PingFang SC;
}


